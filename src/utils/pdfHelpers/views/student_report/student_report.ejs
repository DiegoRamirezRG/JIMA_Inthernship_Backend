<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>boleta_estudiante.pdf</title>
</head>
<body>
    <div class="pdfContainer">
        <div class="pdfHeader">
            <img id="kyubiIsoLogo">
            <div class="pdfFormatInfo">
                <p class="m-0 p-0 page-topic">Boleta Escolar</p>
                <p class="m-0 p-0 page-cicle">Tecnologico Superior de Jalisco, Campus Arandas</p>
            </div>
        </div>
        <div class="user_info">
            <div class="user_general_info">
                <div class="user_info_row">
                    <p class="m-0 p-0"><b>Alumno:</b> <%= person.Nombre %> <%= person.Apellido_Paterno %> <%= person.Apellido_Materno %></p>
                    <p class="m-0 p-0"><b>Promedio:</b> <%= sem_avg %></p>
                </div>
                <div class="user_info_row">
                    <p class="m-0 p-0"><b>Codigo:</b> <%= student_id %></p>
                    <p class="m-0 p-0"><b>Fecha:</b> <%= date %></p>
                </div>
                <div class="user_info_row">
                    <p class="m-0 p-0"><b>Carrera:</b> <%= career_data.nombre_carrera %></p>
                    <p class="m-0 p-0"><b>Ciclo No:</b> <%= enrolled.Numero %></p>
                </div>
            </div>
            <div class="user_image">
                <img id="user_profile_img">
            </div>
        </div>
        <div class="report_info">
            <table class="table table-striped table-fixed table-responsive" id="kardex_table">
                <thead>
                    <tr>
                        <th scope="col" colspan="3" class="text-center align-middle">Detalles</th>
                        <th scope="col" colspan="11" class="text-center align-middle">Unidades</th>
                    </tr>
                    <tr>
                        <th scope="col text-center align-middle">Clave</th>
                        <th scope="col text-center align-middle">Materia</th>
                        <th scope="col text-center align-middle">CR</th>
                        <th scope="col text-center align-middle">1</th>
                        <th scope="col text-center align-middle">2</th>
                        <th scope="col text-center align-middle">3</th>
                        <th scope="col text-center align-middle">4</th>
                        <th scope="col text-center align-middle">5</th>
                        <th scope="col text-center align-middle">6</th>
                        <th scope="col text-center align-middle">7</th>
                        <th scope="col text-center align-middle">8</th>
                        <th scope="col text-center align-middle">9</th>
                        <th scope="col text-center align-middle">10</th>
                        <th scope="col text-center align-middle">Ext</th>
                    </tr>
                </thead>
                <tbody>
                    <% for (const key in classes) { %>
                        <tr>
                            <td><%= classes[key].Codigo_De_Materia %></td>
                            <td><%= classes[key].Nombre_Materia %></td>
                            <td><%= classes[key].Creditos %></td>
                            <% for (let i = 0; i < 10; i++) { %>
                                <% const value = avgUnits[key]?.[i]; %>
                                <td><%= value !== undefined ? value[0].grade : '- - - -' %></td>
                            <% } %>
                            <td><%= extra[key][0].extra_grade %></td>
                        </tr>
                    <% } %>
                </tbody>
            </table>
        </div>
        <div class="footer_info">
            <img id="kyubiLogo">
        </div>
    </div>
</body>
</html>